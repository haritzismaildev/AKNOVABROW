<Window x:Class="AKNOVABROW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AKNOVABROW"
        mc:Ignorable="d"
        Title="AKNOVA Browser" Height="800" Width="1280"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#DDD" BorderThickness="0,0,0,1">
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="#0066FF" CornerRadius="6" Padding="10,5" Margin="0,0,15,0">
                        <TextBlock Text="AKNOVA" Foreground="White" FontWeight="Bold" FontSize="14"/>
                    </Border>

                    <Button x:Name="BackButton" Content="←" Width="40" Height="40" Margin="2"
                            Click="BackButton_Click" FontSize="18"/>
                    <Button x:Name="ForwardButton" Content="→" Width="40" Height="40" Margin="2"
                            Click="ForwardButton_Click" FontSize="18"/>
                    <Button x:Name="RefreshButton" Content="⟳" Width="40" Height="40" Margin="2"
                            Click="RefreshButton_Click" FontSize="18"/>
                    <Button x:Name="HomeButton" Content="🏠" Width="40" Height="40" Margin="2"
                            Click="HomeButton_Click" FontSize="16"/>
                </StackPanel>

                <Border Grid.Column="1" Background="White" BorderBrush="#CCC" BorderThickness="1" 
                        CornerRadius="20" Margin="10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" x:Name="SecureIcon" Text="🔒" 
                                   Margin="15,0,5,0" VerticalAlignment="Center"/>

                        <TextBox Grid.Column="1" x:Name="AddressBar" 
                                 BorderThickness="0" Background="Transparent"
                                 VerticalAlignment="Center" Padding="5"
                                 KeyDown="AddressBar_KeyDown"
                                 Text="https://www.google.com"/>

                        <Button Grid.Column="2" Content="Go" Margin="5" Padding="15,5"
                                Background="#0066FF" Foreground="White" BorderThickness="0"
                                Click="GoButton_Click" FontWeight="Bold"/>
                    </Grid>
                </Border>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="AdBlockButton" Content="🛡️" Width="40" Height="40" Margin="2"
                            Click="AdBlockButton_Click" FontSize="18"/>

                    <Border Background="#00CC66" CornerRadius="10" Padding="6,4" Margin="5,0">
                        <TextBlock x:Name="AdCountText" Text="0" Foreground="White" FontWeight="Bold"/>
                    </Border>

                    <Button x:Name="MenuButton" Content="⋮" Width="40" Height="40" Margin="2"
                            Click="MenuButton_Click" FontSize="20"/>
                </StackPanel>
            </Grid>
        </Border>

        <wpf:WebView2 x:Name="Browser" Grid.Row="1" Source="https://www.google.com"/>

        <Border Grid.Row="2" Background="White" BorderBrush="#DDD" BorderThickness="0,1,0,0">
            <Grid>
                <TextBlock x:Name="StatusText" Text="Ready" Margin="15,0" 
                           VerticalAlignment="Center" FontSize="11"/>

                <TextBlock x:Name="StatsText" Text="Ads: 0" HorizontalAlignment="Right"
                           Margin="15,0" VerticalAlignment="Center" FontSize="11" 
                           FontWeight="Bold" Foreground="Green"/>
            </Grid>
        </Border>
    </Grid>
</Window>
